# ~/.gitconfig_alias
# =============================================================================
# Aliases for Git sourced by `~/.gitconfig`.

[alias]
    ci = commit
    co = checkout
    aa = add --all
    st = status -s
    lo = log --oneline
    pull-branches = "!git branch -a | grep -v HEAD | perl -ne 'chomp($_); s|^\\*?\\s*||; if (m|(.+)/(.+)| && not $d{$2}) {print qq(git branch --track $2 $1/$2\\n)} else {$d{$_}=1}' | csh -xfs #"
    logs = log --show-signature
